interface Team {
  players: string[]; // referring to username
  spyMaster: string; // referring to username
}

interface Room {
  _id: string; // the URL
  createdAt: Date;
  updatedAt: Date; // expireAfterSeconds: 3600 * 24
  usernames: string[];
  teams: {
    a: Team;
    b: Team;
    o: Team;
  };
  host: string; // referring to username
  game: Game;
}

interface Game {
  board: Board;
  timer: Timer;
}

interface Board {
  codenames: Codename[];
  height: number;
  width: number;
}

interface Codename {
  word: string;
  is_revealed: boolean;
  type: CodenameType;
  is_selected: boolean;
}

interface Timer {
  hint: number;
  guess: number;
}

// NOT DB
interface User {
  username: string;
  roomId: string;
  team: Team;
  isSpyMaster: boolean;
  messages: Promise<Message[]>;
}

// TODO
interface Message {
  _id: ID;
  timestamp: Date;
  room_id: ID;
  username: string;
}
